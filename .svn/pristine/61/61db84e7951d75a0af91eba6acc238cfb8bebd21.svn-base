function fnGridRefreshEmailConnect() {
    $("#jqgEmailConnect").setGridParam({ datatype: 'json', page: 1 }).trigger('reloadGrid');
}
function fnClearFields() {
    $("#locISD").val('0').selectpicker('refresh');
    $('#txtOutgoingMailServer').val('');
    $('#txtPort').val('');
}