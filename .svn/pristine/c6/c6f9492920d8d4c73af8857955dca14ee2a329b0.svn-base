@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "EVN_01_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/Masters/VendorMaster.css" rel="stylesheet" />
@section scripts{
