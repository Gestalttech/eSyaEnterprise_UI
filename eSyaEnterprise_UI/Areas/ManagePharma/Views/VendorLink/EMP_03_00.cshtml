@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EMP_03_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');
    var localization = {
        Active: '@Localizer["Active"]',
        Actions: '@Localizer["Actions"]',
        Save: '@Localizer["Save"]',
        Edit: '@Localizer["Edit"]',
        View: '@Localizer["View"]',
        TradeID: '@Localizer["TradeID"]',
        TradeName: '@Localizer["TradeName"]',
        Vendor: '@Localizer["Vendor"]',
        MinimumSupplyQuantity: '@Localizer["MinimumSupplyQuantity"]',
        BusinessSharePercentage: '@Localizer["BusinessSharePercentage"]',
        PartNumber: '@Localizer["PartNumber"]',
        PartDesc: '@Localizer["PartDescription"]',
        Active: '@Localizer["Active"]',
        MapVendorDrugs: '@Localizer["MapVendorDrugs"]',
    }
    var errorMsg = {
        addauth_E1: '@Localizer["UIC01"]',
        editauth_E2: '@Localizer["UIC02"]',
        vieweauth_E3: '@Localizer["UIC03"]',
        deleteauth_E4: '@Localizer["UIC04"]',
        BusinessLocation_E5: '@Localizer["UI0064"]',
        SelectVendor_E6: '@Localizer["UI0342"]',
    }
</script>
@section scripts {
    <script src="~/js/ManagePharma/MapVendorToDrugs.js"></script>
}

<div class="row">
    <div class="col-lg-3  col-md-4 col-sm-8 col-xs-12">
        <div class="form-group">
            <label> @Localizer["BusinessLocation"] </label>
            <select class="selectpicker" data-live-search="true" id="cboBusinessLocation" title="@Localizer["Select"]" data-size="8" asp-items="@ViewBag.BusinessLocation" onchange="fnBindVendor()"></select>
        </div>
    </div>
    <div class="col-lg-3  col-md-4 col-sm-8 col-xs-12">
        <div class="form-group">
            @* <label> @Localizer["Vendor"] </label>
            <select class="selectpicker" data-live-search="true" id="cboVendor" title="@Localizer["Select"]" data-size="8" onchange="fnLoadGridVendorLink()"></select> *@
            <label> @Localizer["Vendor"] </label>
            <select class="selectpicker" data-live-search="true" id="cboVendor" title="Select" data-size="8" onchange="fnLoadGridVendorLink()">
                <option value="0"> Select</option>
            </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
        <table id="jqgMapVendorDrugs"></table>
        <div id="jqpMapVendorDrugs"></div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 form-group text-center">
        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mr-10" id="btnSaveVendorDrugLink" onclick="fnSaveMapVendorDrugs()"><i class="fa fa-save"></i> @Localizer["Save"]  </button>
        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btnCancelVendorDrugLink" onclick="fnClearMapVendorDrugs()"><i class="fa fa-times"></i> @Localizer["Cancel"]  </button>
    </div>
</div>




