@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "EAC_01_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}

<script>
   var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');
    var localization = {
        Save: '@Localizer["Save"]',
        Update: '@Localizer["Update"]',
        Active: '@Localizer["Active"]',
        Select: '@Localizer["Select"]',
        Actions: '@Localizer["Actions"]',
        BookType: '@Localizer["BookType"]',
        BookTypeDesc: '@Localizer["BookTypeDesc"]',
        PaymentMethodLinkReq: '@Localizer["PaymentMethodLinkReq"]',
        ActiveStatus: '@Localizer["ActiveStatus"]',
        AddBookTypes: '@Localizer["AddBookTypes"]',
        EditBookTypes: '@Localizer["EditBookTypes"]',
        ViewBookTypes: '@Localizer["ViewBookTypes"]',
        OnlyAlphabets: '@Localizer["OnlyAlphabets"]',
    }
    var errorMsg = {
        editauth_E2: '@Localizer["UIC02"]',
        vieweauth_E3: '@Localizer["UIC03"]',
        BookType_E3: '@Localizer["UI0345"]',
        BookTypeDescription_E4: '@Localizer["UI0346"]',
    }
</script>
<link href="~/css/Common/jsTree.css" rel="stylesheet" />

@section scripts {
    <script src="~/js/Common/jsTree.js"></script>
    <script src="~/js/configfinance/booktypes.js"></script>
}

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4 col-12">
        <div id="jstBookTypes"></div>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-8">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9">
                <div id="divBookTypes" style="display:none;">
                    <div class="demo-card-square mdl-card mdl-shadow--2dp marbot15 fullwidth" id="pnlAddBookTypes">
                        <div class="mdl-card__title mdl-card--expand padleft0 d-block">
                            <h5 class="mdl-card__title-text"> @Localizer["BookTypes"] </h5>
                        </div>
                        <div class="mdl-card__supporting-text fullwidth">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-6 col-sm-12">
                                    <div class="form-group">
                                        <label> @Localizer["BookType"] </label>
                                        <input type="text" id="txtBookType" class="form-control w-50" maxlength="1" name="alpha" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title='@Localizer["OnlyAlphabets"]' />
                                    </div>
                                </div><div class="col-lg-8 col-md-8 col-sm-12">
                                    <div class="form-group">
                                        <label> @Localizer["BookTypeDescription"] </label>
                                        <input type="text" id="txtBookTypeDescription" class=" form-control" maxlength="25" name="alpha" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title='@Localizer["OnlyAlphabets"]' />
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkPaymentMethodLinkReq">
                                            <input type="checkbox" id="chkPaymentMethodLinkReq" class="mdl-checkbox__input">
                                            <span class="mdl-checkbox__label">@Localizer["PaymentMethodLinkReq"] </span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="chkActiveStatus">
                                            <input type="checkbox" id="chkActiveStatus" class="mdl-checkbox__input">
                                            <span class="mdl-checkbox__label">@Localizer["ActiveStatus"] </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mdl-card__actions text-center vertical-center border-top pb-0">
                                <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect me-2" id="btnSaveBookTypes" onclick="fnAddOrUpdateBookType()"><i class="fa fa-save"></i> @Localizer["Save"]</button>
                                <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btnCancelBookTypes" onclick="fnLoadBookType()"><i class="fa fa-times"></i> @Localizer["Cancel"]</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="card treeaction">
                    <div class="card-header">
                        <h6 class="m-0 p-0 c-secondary"> @Localizer["Action"]</h6>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnExpandAll" onclick="fnExpandAll()">
                                <i class="fas fa-expand"></i>   @Localizer["ExpandAll"]
                            </button>
                        </li>
                        <li class="list-group-item">
                            <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnCollapseAll" onclick="fnCollapseAll()">
                                <i class="fas fa-compress"></i>   @Localizer["CollapseAll"]
                            </button>
                        </li>
                    </ul>
            </div>
        </div>
    </div>
</div> </div>
