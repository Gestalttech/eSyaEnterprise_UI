@{
    ViewData["Title"] = "ReceptionDesk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/common/bootbox.min.js"></script>
<link href="~/css/egypt/displaysystem.css" rel="stylesheet" />
<script src="~/js/egypt/displaysystem.js"></script>


<input type="hidden" id="hdBusinessKey" value=@ViewBag.BusinessKey />
<input type="hidden" id="hdRoomNumber" value=@ViewBag.ArrayOfRoomNo />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-12 col-12 leftDisplay p-lg-0 p-r-0">
            <div><img src="~/images/logo_whitebg.png" class="darlfouadlogo" /></div>
            <p>Please proceed to reception desk number  <span id="lblCallingRoomNumber"></span></p>
            <p>يرجى الانتقال الى مكتب الاستقبال رقم  <span id="lblCallingRoomNumber_ar"></span></p>

            <p class="tokenNumber blink" id="lblCallingTokenNumberD"></p>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7 rightDisplay p-r-0 p-0">
            @foreach (var rm in ViewBag.RoomList)
            {
                <div style="padding:5px 3px">
                    <p class="text-english clinicNumber font-weight-bold">Reception Desk No. @rm</p>
                    <p class="text-arabic clinicNumber font-weight-bold">مكتب الاستقبال رقم  <span id="lblRoomNo_ar_@rm.Replace(" ", "")"></span></p>
                    <span class="clearfix"></span>
                    <p class="text-center text-tokenNumber" style="margin:5px" id="lblTokenNumber_@rm.Replace(" ", "")"></p>
                </div>
            }

        </div>
    </div>
</div>






