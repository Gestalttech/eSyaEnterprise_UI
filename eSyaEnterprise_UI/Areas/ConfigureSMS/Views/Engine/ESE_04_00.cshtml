@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ESE_04_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}

<link href="~/css/Common/jsTree.css" rel="stylesheet" />
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');

    var localization = {
        Actions: '@Localizer["Actions"]',
        Save: '@Localizer["Save"]',
        Cancel: '@Localizer["Cancel"]',
        Update: '@Localizer["Update"]',
        Active: '@Localizer["Active"]',
        SMSLocationWise: '@Localizer["SMSLocationWise"]',
        SMSID: '@Localizer["SMSID"]',
        SMSDescription: '@Localizer["SMSDescription"]',
        SMSStatement: '@Localizer["SMSStatement"]',
        IsVariable: '@Localizer["IsVariable"]',
        TriggeringEvent: '@Localizer["TriggeringEvent"]',

    }
    var errorMsg = {
        addauth_E1: '@Localizer["UIC01"]',
        editauth_E2: '@Localizer["UIC02"]',
        vieweauth_E3: '@Localizer["UIC03"]',
        deleteauth_E4: '@Localizer["UIC04"]',
    }
</script>
@section scripts {
    <script src="~/js/Common/jsTree.js"></script>
    <script src="~/js/configuresms/managesmslocationwise.js"></script>
}
<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="form-group">
            <label>@Localizer["BusinessLocation"]</label>
            <select class="selectpicker form-control" data-live-search="true" id="cboBusinessLocation" data-size="8" title="@Localizer["Select"]" asp-items="@ViewBag.BusinessKey"></select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4">
        <div id="jstManageSMSLocation"></div>
    </div>
    <div class="col-lg-7 col-md-7 col-sm-6">
        <div class="demo-card-square mdl-card mdl-shadow--2dp" id="pnlLinkedSMS" style="width: 100%; display:none">
            <div id="pnlMainModuleHeading" class="mdl-card__title mdl-card--expand padleft0 d-block">
                <h5 class="mdl-card__title-text">@Localizer["AddLinkedSMS"] </h5>
            </div>
            <div class="mdl-card__supporting-text fullwidth">
                 <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <table id="jqgSMSLocationWise"></table>
                        <div id="jqpSMSLocationWise"></div>
                    </div>
                </div>

            <div class="mdl-card__actions mdl-card--border" style="text-align: center;">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button me-2" id="btnAddLinkedSMS" onclick="fnSaveLinkedSMS()">
                    @Localizer["Save"]
                    </button>
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button" id="btnCancelLinkedSMS">
                        @Localizer["Cancel"]
                    </button>
            </div>

        </div>

    </div>

        
    
        
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2">
        <div class="card treeaction">
            <div class="card-header">
                <h5> @Localizer["Action"]</h5>
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button w-100" id="btnExpandAll" onclick="fnExpandAllSMSLocWise()">
                        <i class="fas fa-expand"></i>   @Localizer["ExpandAll"]
                    </button>
                </li>
                <li class="list-group-item">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button w-100" id="btnCollapseAll" onclick="fnCollapseAllSMSLocWise()">
                        <i class="fas fa-compress"></i>   @Localizer["CollapseAll"]
                    </button>
                </li>
            </ul>

        </div>
    </div>
</div>

                     