@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ESK_02_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');
</script>

@section scripts {

    <script src="~/js/Common/jsTree.js"></script>
    <link href="~/css/Common/jsTree.css" rel="stylesheet" />
    <script src="~/js/ConfigSKU/ItemCategory.js"></script>
}

<script>
    var localization = {
         AddItemCategory: '@Localizer["AddItemCategory"]',
        Save: '@Localizer["Save"]',
        ViewItemCategory: '@Localizer["ViewItemCategory"]',
        EditItemCategory: '@Localizer["EditItemCategory"]',
        Update: '@Localizer["Update"]',
        OnlyAlphanumeric50Characters: '@Localizer["OnlyAlphanumeric50Characters"]',
    }
    var errorMsg = {
        addauth_E1: '@Localizer["UIC01"]',
        editauth_E2: '@Localizer["UIC02"]',
        vieweauth_E3: '@Localizer["UIC03"]',
        deleteauth_E4: '@Localizer["UIC04"]',
        actDeact_E5: '@Localizer["UIC05"]',
        ItemCategoryDesc_E6: '@Localizer["UI0184"]',
        BudgetAmount_E7: '@Localizer["UI0185"]',
        Commitment_E8: '@Localizer["UI0186"]',
    }
</script>


<div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4" id="divItemCategoryTree">
        <div id="jstItemCategoryTree"></div>
    </div>
     
    <div class="col-lg-6 col-md-6 col-sm-6 f-right">
        <div id="dvItemCategory" style="display:none;">
            <div class="demo-card-square mdl-card mdl-shadow--2dp marbot15 fullwidth" id="pnlAddItemCategory">
                <div class="mdl-card__title mdl-card--expand padleft0 d-block">
                    <h5 class="mdl-card__title-text">@Localizer["AddItemCategory"]</h5>
                </div>
                <div class="mdl-card__supporting-text fullwidth">
                    <div class="row ">
                        <div class="col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="txtItemCategoryDesc"> @Localizer["ItemCategoryDescription"]</label>
                                <input type="text" maxlength="50" autocomplete="off" class="form-control" id="txtItemCategoryDesc" data-bs-custom-class="custom-tooltip" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title='@Localizer["OnlyAlphanumeric50Characters"]' />
                           </div>
                        </div>
                    </div>
                   
                    <div class="row">
                        <div class="col-lg-3 col-4 form-group">
                            <label class="mdl-checkbox mdl-js-checkbox" for="chkActiveStatus">
                                <input type="checkbox" id="chkActiveStatus"
                                       class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["Active"]</span>
                            </label>
                        </div>
                    </div>
                </div>
                    <div class="mdl-card__actions mdl-card--border text-center vertical-center">
                        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect me-3" id="btnICAdd" onclick="fnAddOrUpdateItemCategory()"><i class="fa fa-save"></i> @Localizer["Save"]</button>
                    <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btnICCancel" onclick="fnCancel()"><i class="fa fa-times"></i> @Localizer["Cancel"]</button>
                    </div>
               
            </div>
        </div>
    </div>


    <div class="col-sm-3 col-md-2 col-lg-2">
        <div class="card treeaction">
            <div class="card-header">
                <h6 class="m-0 p-0 c-secondary"> @Localizer["Action"]</h6>
            </div>


            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnICExpandAll" onclick="fnICExpandAll()">
                        <i class="fas fa-expand"></i>   @Localizer["ExpandAll"]
                    </button>
                </li>
                <li class="list-group-item">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnICCollapseAll" onclick="fnICCollapseAll()">
                        <i class="fas fa-compress"></i>   @Localizer["CollapseAll"]
                    </button>
                </li>
            </ul>
        </div>
    </div>
</div>





