 @using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ESK_03_00";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var userFormRole = (eSyaEnterprise_UI.Models.DO_UserFormRole)ViewBag.UserFormRole;
}
<script>
    var _userFormRole = JSON.parse('@Html.Raw(Json.Serialize(userFormRole))');
</script>



<script>
    var localization = {
        AddItemSubCategory: '@Localizer["AddItemSubCategory"]',
        Save: '@Localizer["Save"]',
        ViewItemSubCategory: '@Localizer["ViewItemSubCategory"]',
        EditItemSubCategory: '@Localizer["EditItemSubCategory"]',
        Update: '@Localizer["Update"]',
        OnlyAlphanumeric50Characters: '@Localizer["OnlyAlphanumeric50Characters"]',
    }
    var errorMsg = {
        addauth_E1: '@Localizer["UIC01"]',
        editauth_E2: '@Localizer["UIC02"]',
        vieweauth_E3: '@Localizer["UIC03"]',
        deleteauth_E4: '@Localizer["UIC04"]',
        actDeact_E5: '@Localizer["UIC05"]',
        ItemSubCategory_E6: '@Localizer["UI0187"]',
        Category_E7: '@Localizer["UI0188"]',
    }
</script>
@section scripts {

    <script src="~/js/Common/jsTree.js"></script>
    <link href="~/css/Common/jsTree.css" rel="stylesheet" />
    <script src="~/js/ConfigSKU/ItemSubCategory.js"></script>
}

<style>


    .w-120 {
        width: 120px !important
    }

    .mdl-card__title {
        max-height: 45px !important;
        display: block !important;
        padding-left: 0px !important;
        padding-top: 0px !important;
    }

    .mdl-card {
        min-height: auto !important
    }


    hr {
        border-color: #f1f1f1 !important;
    }

    #pnlAddMainMenu, #pnlAddSubMenu {
        width: 100%;
    }

    #lblItemGroup {
        cursor: pointer;
        padding: 2px 4px;
    }

        #lblItemGroup:hover {
            background: #e7f4f9;
            box-shadow: inset 0 0 1px #cccccc;
        }

    .bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
        width: 100% !important
    }

    hr {
        margin-bottom: 8px;
        margin-top: 8px;
    }
</style>

<div class="row row-bottom-pad">
    <div class="col-sm-4 col-md-4 col-lg-4">
         <div id="jstItemSubCategoryTree">
        </div>
    </div>
     
    <div class="col-lg-6 col-md-6 col-sm-6 f-right">


        <div id="dvItemSubCategory" style="display:none;">

            <div class="demo-card-square mdl-card mdl-shadow--2dp marbot15 fullwidth" id="pnlAddItemSubCategory">
                <div class="mdl-card__title mdl-card--expand padleft0 d-block">
                    <h5 class="mdl-card__title-text">@Localizer["AddItemSubCategory"]</h5>
                </div>
                <div class="mdl-card__supporting-text fullwidth">
                    <div class="row ">
                        <div class="col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label>
                                    @Localizer["ItemSubCategoryDescription"]
                                </label>
                                <input type="text" maxlength="50" autocomplete="off" autofocus class="form-control" id="txtItemSubCategoryDesc" />

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-12 form-group">
                            <label class="mdl-checkbox mdl-js-checkbox" for="chkActiveStatusSub">
                                <input type="checkbox" id="chkActiveStatusSub"
                                       class="mdl-checkbox__input">
                                <span class="mdl-checkbox__label">@Localizer["Active"]</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mdl-card__actions mdl-card--border text-center vertical-center">

                        <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect me-3" id="btnISCAdd" onclick="fnAddOrUpdateItemSubCategory()"><i class="fa fa-plus"></i> @Localizer["Save"]</button>
                    <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="btnISCancel" onclick="fnISClear()"><i class="fa fa-times"></i> @Localizer["Cancel"]</button>
                    </div>



               
            </div>
        </div>
    </div>

    <div class="col-sm-3 col-md-2 col-lg-2">
        <div class="card treeaction">
            <div class="card-header">
                <h6 class="m-0 p-0 c-secondary"> @Localizer["Action"]</h6>
            </div>


            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnISCExpandAll" onclick="fnISCExpandAll()">
                        <i class="fas fa-expand"></i>   @Localizer["ExpandAll"]
                    </button>
                </li>
                <li class="list-group-item">
                    <button class="mdl-button mdl-js-button mdl-button--raised primary-button btn_wdth" id="btnISCCollapseAll" onclick="fnISCCollapseAll()">
                        <i class="fas fa-compress"></i>   @Localizer["CollapseAll"]
                    </button>
                </li>
            </ul>
        </div>
    </div>
</div>






